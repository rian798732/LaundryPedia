<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo1"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan masukkan data dengan benar"
                android:textSize="12dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="17dp"
        />

        <EditText
                android:id="@+id/inputEmailInLoginAct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:hint="MasukKan Alamat Email"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="5dp"
                android:textSize="17dp"/>

        <EditText
                android:id="@+id/inputPasswordInLoginAct"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:layout_height="50dp"
                android:hint="MasukKan Password"/>

        <Button
                android:id="@+id/loginButtonInLoginAct"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum punya akun?"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

        <Button
                android:id="@+id/registerButtonInLoginAct"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>